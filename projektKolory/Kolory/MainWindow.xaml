<Window x:Class="Kolory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolory"
        mc:Ignorable="d"
        Title="Kolory" Height="350" Width="500" KeyDown="Window_KeyDown" Closed="Window_Closed">
    <Grid>
        <Rectangle x:Name="rectangle" Stroke="Black" Margin="10,10,10,200"/>
        <Slider x:Name="sliderR" Margin="10,0,10,130" Height="40" VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderG" Margin="10,0,10,80" Height="40" VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>
        <Slider x:Name="sliderB" Margin="10,0,10,30" Height="40" VerticalAlignment="Bottom" ValueChanged="sliderR_ValueChanged" Maximum="255"/>

    </Grid>
</Window>
